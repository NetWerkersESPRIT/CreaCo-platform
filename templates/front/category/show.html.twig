{% extends './base.html.twig' %}

{% block title %}CreaCo -
	{{ category.nom }}
{% endblock %}

{% block body %}
	<!-- Header -->
	<div class="bg-white border-b border-gray-100 py-12">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<nav class="flex mb-8 text-sm font-medium text-gray-500" aria-label="Breadcrumb">
				<ol class="flex items-center space-x-2">
					<li>
						<a href="{{ path('app_home') }}" class="hover:text-primary">Accueil</a>
					</li>
					<li>
						<i class="fas fa-chevron-right text-[10px] text-gray-300"></i>
					</li>
					<li class="text-gray-900">{{ category.nom }}</li>
				</ol>
			</nav>

			<div class="flex flex-col md:flex-row gap-8 items-start justify-between">
				<div class="max-w-3xl">
					<h1 class="text-4xl font-extrabold text-gray-900 mb-4">{{ category.nom }}</h1>
					<p class="text-xl text-gray-500 mb-6">{{ category.description }}</p>

					<form method="get" class="flex flex-col md:flex-row gap-4 items-center max-w-2xl" novalidate>
						<div class="relative flex-grow">
							<span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
								<i class="fas fa-search text-gray-400"></i>
							</span>
							<input type="text" name="search" value="{{ search ?? '' }}" class="w-full py-2 pl-10 pr-4 text-sm text-gray-700 bg-white border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent shadow-sm" placeholder="Rechercher un cours...">
						</div>

						<div class="flex items-center gap-2">
							<label class="text-xs font-bold text-gray-400 uppercase tracking-widest whitespace-nowrap">Trier par</label>
							<select name="sort" onchange="this.form.submit()" class="py-2 pl-3 pr-10 text-sm border-gray-200 rounded-lg focus:ring-primary focus:border-primary bg-white shadow-sm cursor-pointer">
								<option value="date_de_creation_DESC" {{ (current_sort ~ '_' ~ current_order) == 'date_de_creation_DESC' ? 'selected' : '' }}>Plus récents</option>
								<option value="titre_ASC" {{ (current_sort ~ '_' ~ current_order) == 'titre_ASC' ? 'selected' : '' }}>Nom (A-Z)</option>
							</select>
						</div>
					</form>
				</div>
				<div class="flex items-center gap-2 bg-primary/5 px-4 py-2 rounded-xl text-primary font-bold whitespace-nowrap">
					<i class="fas fa-book-open"></i>
					<span>{{ courses|length }}
						Cours disponibles</span>
				</div>
			</div>
		</div>
	</div>

	<!-- Courses Grid -->
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
			{% for course in courses %}
				<div class="group bg-white rounded-[2rem] border border-gray-100 overflow-hidden shadow-sm hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
					<div class="relative h-56 w-full overflow-hidden">
						{% if course.image %}
							<img src="{{ course.image }}" alt="{{ course.titre }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
						{% else %}
							<div class="w-full h-full gradient-bg flex items-center justify-center text-white opacity-90">
								<i class="fas fa-graduation-cap text-5xl"></i>
							</div>
						{% endif %}
						<div class="absolute top-4 left-4 flex flex-col gap-2">
							<span class="px-4 py-1.5 rounded-full bg-white/90 backdrop-blur-sm text-xs font-bold text-primary shadow-sm w-fit">
								Formation
							</span>
							<span class="px-4 py-1.5 rounded-full bg-gray-900/80 backdrop-blur-sm text-[10px] font-bold text-white shadow-sm w-fit">
								<i class="fas fa-calendar-alt mr-1"></i>
								Publié le
								{{ course.dateDeCreation ? course.dateDeCreation|date('d/m/Y') : '-' }}
							</span>
						</div>
					</div>

					<div class="p-8">
						<h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors">
							{{ course.titre }}
						</h3>
						<p class="text-gray-500 text-sm mb-8 line-clamp-2">
							{{ course.description }}
						</p>

						<div class="flex items-center justify-between pt-6 border-t border-gray-50">
							<div class="flex items-center gap-2 text-gray-400 text-sm">
								<i class="fas fa-file-alt"></i>
								<span>{{ course.ressources|length }}
									ressources</span>
							</div>
							<a href="{{ path('app_front_course', {'id': course.id}) }}" class="px-6 py-2.5 bg-gray-900 text-white text-sm font-bold rounded-xl hover:bg-primary transition-colors">
								Accéder
							</a>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-span-full text-center py-20 bg-gray-50 rounded-3xl border-2 border-dashed border-gray-200">
					<i class="fas fa-ghost text-4xl text-gray-300 mb-4"></i>
					<p class="text-gray-500 font-medium">Bientôt disponible ! Aucun cours pour cette catégorie pour le moment.</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
