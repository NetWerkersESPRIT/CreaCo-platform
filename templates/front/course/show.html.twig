{% extends './base.html.twig' %}

{% block title %}CreaCo -
	{{ course.titre }}
{% endblock %}

{% block body %}
	<!-- Course Header Area -->
	<div
		class="relative bg-gray-900 pt-20 pb-40 overflow-hidden">
		<!-- Background Decoration -->
		<div class="absolute top-0 right-0 w-1/3 h-full gradient-bg opacity-10 blur-3xl transform skew-x-12 translate-x-1/2"></div>
		<div class="absolute bottom-0 left-0 w-1/4 h-1/2 gradient-bg opacity-10 blur-3xl transform -skew-x-12 -translate-x-1/2"></div>

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<nav class="flex mb-8 text-sm font-medium text-gray-400" aria-label="Breadcrumb">
				<ol class="flex items-center space-x-2">
					<li>
						<a href="{{ path('app_home') }}" class="hover:text-white">Accueil</a>
					</li>
					<li>
						<i class="fas fa-chevron-right text-[10px] text-gray-700"></i>
					</li>
					{% if course.categorie %}
						<li>
							<a href="{{ path('app_front_category', {'id': course.categorie.id}) }}" class="hover:text-white">{{ course.categorie.nom }}</a>
						</li>
						<li>
							<i class="fas fa-chevron-right text-[10px] text-gray-700"></i>
						</li>
					{% endif %}
					<li class="text-white">{{ course.titre }}</li>
				</ol>
			</nav>

			<div class="flex flex-col lg:flex-row gap-16 items-center">
				<div class="flex-1 text-center lg:text-left">
					<span class="inline-block px-4 py-1.5 rounded-full bg-primary/20 text-primary text-xs font-bold mb-6 tracking-wide uppercase">
						Cours Complet
					</span>
					<h1 class="text-4xl md:text-6xl font-extrabold text-white mb-8 leading-tight">
						{{ course.titre }}
					</h1>
					<p class="text-xl text-gray-400 max-w-2xl mb-12">
						{{ course.description }}
					</p>
					<div class="flex flex-wrap justify-center lg:justify-start gap-8">
						<div class="flex items-center gap-3">
							<div class="w-12 h-12 rounded-2xl bg-white/5 flex items-center justify-center text-primary border border-white/10">
								<i class="fas fa-folder-open text-xl"></i>
							</div>
							<div class="text-left">
								<div class="text-white font-bold">{{ ressources|length }}</div>
								<div class="text-gray-500 text-xs">Ressources</div>
							</div>
						</div>
						<div class="flex items-center gap-3">
							<div class="w-12 h-12 rounded-2xl bg-white/5 flex items-center justify-center text-primary border border-white/10">
								<i class="fas fa-clock text-xl"></i>
							</div>
							<div class="text-left">
								<div class="text-white font-bold">À votre rythme</div>
								<div class="text-gray-500 text-xs">Durée flexible</div>
							</div>
						</div>
						<div class="flex items-center gap-3">
							<div class="w-12 h-12 rounded-2xl bg-white/5 flex items-center justify-center text-primary border border-white/10">
								<i class="fas fa-calendar-check text-xl"></i>
							</div>
							<div class="text-left">
								<div class="text-white font-bold">{{ course.dateDeCreation ? course.dateDeCreation|date('d/m/Y') : '-' }}</div>
								<div class="text-gray-500 text-xs">Publication</div>
							</div>
						</div>
						{% if course.dateDeModification %}
							<div class="flex items-center gap-3">
								<div class="w-12 h-12 rounded-2xl bg-white/5 flex items-center justify-center text-primary border border-white/10">
									<i class="fas fa-sync text-xl"></i>
								</div>
								<div class="text-left">
									<div class="text-white font-bold">{{ course.dateDeModification|date('d/m/Y') }}</div>
									<div class="text-gray-500 text-xs">Mis à jour</div>
								</div>
							</div>
						{% endif %}
					</div>
				</div>

				<div class="w-full lg:w-96 shrink-0">
					<div class="glass p-4 rounded-[2.5rem] p-4">
						<div class="aspect-video rounded-[2rem] overflow-hidden shadow-2xl">
							{% if course.image %}
								<img src="{{ course.image }}" alt="{{ course.titre }}" class="w-full h-full object-cover">
							{% else %}
								<div class="w-full h-full gradient-bg flex items-center justify-center text-white">
									<i class="fas fa-play-circle text-6xl"></i>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Content Area -->
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-20 relative z-20 pb-32">
		<div
			class="grid grid-cols-1 lg:grid-cols-3 gap-12">
			<!-- Main Content -->
			<div class="lg:col-span-2">
				<div class="bg-white rounded-[2.5rem] shadow-xl p-8 md:p-12 mb-12">
					<div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-4">
						<h2 class="text-3xl font-bold text-gray-900">Ressources du cours</h2>
						<form method="get" class="relative w-full md:w-64" novalidate>
							<span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
								<i class="fas fa-search text-gray-400"></i>
							</span>
							<input type="text" name="search" value="{{ search ?? '' }}" class="w-full py-2 pl-10 pr-4 text-sm text-gray-700 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent focus:bg-white transition-colors" placeholder="Rechercher...">
							<input type="hidden" name="type" value="{{ current_type }}">
						</form>
					</div>

					<div class="flex flex-wrap gap-2 mb-8">
						<a href="{{ path('app_front_course', {id: course.id, search: search}) }}" class="px-4 py-1.5 rounded-full text-xs font-bold transition-all {{ not current_type ? 'bg-primary text-white shadow-lg' : 'bg-gray-100 text-gray-500 hover:bg-gray-200' }}">
							Toutes
						</a>
						{% for type in ['PDF', 'VIDEO', 'IMAGE', 'TEXTE'] %}
							<a href="{{ path('app_front_course', {id: course.id, search: search, type: type}) }}" class="px-4 py-1.5 rounded-full text-xs font-bold transition-all {{ current_type == type ? 'bg-primary text-white shadow-lg' : 'bg-gray-100 text-gray-500 hover:bg-gray-200' }}">
								{{ type }}
							</a>
						{% endfor %}
					</div>

					<div class="space-y-4">
						{% for ressource in ressources %}
							<div class="group flex items-center gap-6 p-6 rounded-3xl bg-gray-50 hover:bg-white border border-transparent hover:border-gray-100 hover:shadow-lg transition-all">
								<div class="w-14 h-14 rounded-2xl bg-white flex items-center justify-center text-2xl shadow-sm text-gray-400 group-hover:text-primary group-hover:scale-110 transition-all">
									{% if ressource.type|lower == 'pdf' %}
										<i class="fas fa-file-pdf"></i>
									{% elseif ressource.type|lower == 'video' %}
										<i class="fas fa-video"></i>
									{% elseif ressource.type|lower == 'image' %}
										<i class="fas fa-image"></i>
									{% else %}
										<i class="fas fa-link"></i>
									{% endif %}
								</div>
								<div class="flex-grow">
									<h4 class="text-lg font-bold text-gray-900 mb-1">{{ ressource.nom }}</h4>
									<div class="flex items-center gap-3">
										<span class="text-xs font-semibold uppercase tracking-wider text-gray-400 group-hover:text-primary transition-colors">{{ ressource.type }}</span>
										<span class="text-[10px] text-gray-400 flex items-center gap-1">
											<i class="fas fa-clock"></i>
											Ajouté le
											{{ ressource.dateDeCreation ? ressource.dateDeCreation|date('d/m/Y') : '-' }}
										</span>
									</div>
								</div>
								<a href="{{ ressource.url }}" target="_blank" class="w-12 h-12 rounded-full border-2 border-gray-100 flex items-center justify-center text-gray-400 hover:border-primary hover:text-primary hover:bg-primary/5 transition-all">
									<i class="fas fa-download text-sm"></i>
								</a>
							</div>
						{% else %}
							<div class="text-center py-20 bg-gray-50 rounded-3xl border-2 border-dashed border-gray-200">
								<i class="fas fa-lock text-4xl text-gray-300 mb-4"></i>
								<p class="text-gray-500 font-medium">Les ressources seront bientôt disponibles.</p>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>

			<!-- Sidebar -->
			<div class="lg:col-span-1">
				<div
					class="sticky top-28 space-y-8">
					<!-- Instructor Card -->
					<div class="bg-white rounded-[2.5rem] shadow-xl p-8 border border-gray-50 text-center">
						<div class="w-24 h-24 mx-auto rounded-3xl gradient-bg p-1 mb-6">
							<div class="w-full h-full rounded-[1.25rem] bg-white flex items-center justify-center overflow-hidden">
								<img src="https://ui-avatars.com/api/?name=Admin+CreaCo&background=6366f1&color=fff" alt="Instructor">
							</div>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-2">Admin CreaCo</h3>
						<p class="text-gray-500 text-sm mb-6">Expert en développement & design</p>
						<div class="flex justify-center gap-4 text-gray-400">
							<a href="#" class="hover:text-primary">
								<i class="fab fa-linkedin-in"></i>
							</a>
							<a href="#" class="hover:text-primary">
								<i class="fab fa-twitter"></i>
							</a>
							<a href="#" class="hover:text-primary">
								<i class="fas fa-globe"></i>
							</a>
						</div>
					</div>

					<!-- Features Box -->
					<div class="bg-gray-900 rounded-[2.5rem] shadow-xl p-8 text-white relative overflow-hidden">
						<div class="absolute -top-10 -right-10 w-40 h-40 gradient-bg opacity-20 blur-3xl"></div>
						<h4 class="text-lg font-bold mb-6">Ce que vous obtenez</h4>
						<ul class="space-y-4">
							<li class="flex items-center gap-3 text-sm text-gray-400">
								<i class="fas fa-check-circle text-primary"></i>
								Accès à vie
							</li>
							<li class="flex items-center gap-3 text-sm text-gray-400">
								<i class="fas fa-check-circle text-primary"></i>
								Support premium
							</li>
							<li class="flex items-center gap-3 text-sm text-gray-400">
								<i class="fas fa-check-circle text-primary"></i>
								Certificat de réussite
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
