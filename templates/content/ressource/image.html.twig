{% extends 'base.html.twig' %}

{% block title %}{{ ressource.nom }} - Image{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">
                            <i class="fas fa-image text-success"></i> 
                            {{ ressource.nom }}
                        </h3>
                        <small class="text-muted">
                            Cours: <a href="{{ path('app_cours_show', {'id': ressource.cours.id}) }}">{{ ressource.cours.titre }}</a>
                        </small>
                    </div>
                    <div>
                        <span class="badge bg-success">IMAGE</span>
                        <a href="{{ path('app_cours_show', {'id': ressource.cours.id}) }}" 
                           class="btn btn-outline-secondary btn-sm ms-2">
                            <i class="fas fa-arrow-left"></i> Retour au cours
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if ressource.url %}
                    <div class="text-center">
                        <img src="{{ ressource.url }}" 
                             alt="{{ ressource.nom }}" 
                             class="img-fluid rounded shadow-lg" 
                             style="max-height: 75vh; width: auto; cursor: pointer;"
                             onclick="toggleFullscreen()">
                    </div>
                    {% else %}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        L'image n'est pas disponible.
                    </div>
                    {% endif %}

                    {% if ressource.contenu %}
                    <div class="mt-4">
                        <h5>Description</h5>
                        <div class="p-3 bg-light rounded">
                            {{ ressource.contenu|nl2br }}
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> 
                                Ajoutée le {{ ressource.dateDeCreation ? ressource.dateDeCreation|date('d/m/Y H:i') : 'N/A' }}
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            {% if ressource.url %}
                            <button class="btn btn-success btn-sm" onclick="toggleFullscreen()">
                                <i class="fas fa-expand"></i> Plein écran
                            </button>
                            <a href="{{ ressource.url }}" target="_blank" 
                               class="btn btn-outline-success btn-sm ms-2">
                                <i class="fas fa-external-link-alt"></i> Nouvel onglet
                            </a>
                            <a href="{{ ressource.url }}" download="{{ ressource.nom }}" 
                               class="btn btn-outline-primary btn-sm ms-2">
                                <i class="fas fa-download"></i> Télécharger
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function toggleFullscreen() {
    const img = document.querySelector('img[alt="{{ ressource.nom }}"]');
    if (img.requestFullscreen) {
        img.requestFullscreen();
    } else if (img.webkitRequestFullscreen) {
        img.webkitRequestFullscreen();
    } else if (img.msRequestFullscreen) {
        img.msRequestFullscreen();
    }
}
</script>
{% endblock %}
