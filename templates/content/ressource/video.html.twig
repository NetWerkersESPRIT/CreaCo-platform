{% extends 'base.html.twig' %}

{% block title %}{{ ressource.nom }} - Vidéo{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">
                            <i class="fas fa-video text-danger"></i> 
                            {{ ressource.nom }}
                        </h3>
                        <small class="text-muted">
                            Cours: <a href="{{ path('app_cours_show', {'id': ressource.cours.id}) }}">{{ ressource.cours.titre }}</a>
                        </small>
                    </div>
                    <div>
                        <span class="badge bg-danger">VIDÉO</span>
                        <a href="{{ path('app_cours_show', {'id': ressource.cours.id}) }}" 
                           class="btn btn-outline-secondary btn-sm ms-2">
                            <i class="fas fa-arrow-left"></i> Retour au cours
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if ressource.url %}
                    <div class="video-container text-center">
                        <video controls class="img-fluid rounded shadow-lg" 
                               style="max-height: 70vh; width: 100%;"
                               id="videoPlayer">
                            <source src="{{ ressource.url }}" type="video/mp4">
                            <source src="{{ ressource.url }}" type="video/webm">
                            <source src="{{ ressource.url }}" type="video/ogg">
                            Votre navigateur ne supporte pas la lecture de vidéos.
                        </video>
                    </div>
                    {% else %}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        La vidéo n'est pas disponible.
                    </div>
                    {% endif %}

                    {% if ressource.contenu %}
                    <div class="mt-4">
                        <h5>Description</h5>
                        <div class="p-3 bg-light rounded">
                            {{ ressource.contenu|nl2br }}
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> 
                                Ajoutée le {{ ressource.dateDeCreation ? ressource.dateDeCreation|date('d/m/Y H:i') : 'N/A' }}
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            {% if ressource.url %}
                            <button class="btn btn-danger btn-sm" onclick="toggleFullscreen()">
                                <i class="fas fa-expand"></i> Plein écran
                            </button>
                            <button class="btn btn-outline-danger btn-sm ms-2" onclick="togglePictureInPicture()">
                                <i class="fas fa-clone"></i> Picture-in-Picture
                            </button>
                            <a href="{{ ressource.url }}" target="_blank" 
                               class="btn btn-outline-danger btn-sm ms-2">
                                <i class="fas fa-external-link-alt"></i> Nouvel onglet
                            </a>
                            <a href="{{ ressource.url }}" download="{{ ressource.nom }}" 
                               class="btn btn-outline-primary btn-sm ms-2">
                                <i class="fas fa-download"></i> Télécharger
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function toggleFullscreen() {
    const video = document.getElementById('videoPlayer');
    if (video.requestFullscreen) {
        video.requestFullscreen();
    } else if (video.webkitRequestFullscreen) {
        video.webkitRequestFullscreen();
    } else if (video.msRequestFullscreen) {
        video.msRequestFullscreen();
    }
}

function togglePictureInPicture() {
    const video = document.getElementById('videoPlayer');
    if (document.pictureInPictureElement) {
        document.exitPictureInPicture();
    } else if (video.requestPictureInPicture) {
        video.requestPictureInPicture();
    }
}
</script>
{% endblock %}
