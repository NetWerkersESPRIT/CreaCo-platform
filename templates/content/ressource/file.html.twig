{% extends 'base.html.twig' %}

{% block title %}{{ ressource.nom }} - Fichier{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">
                            <i class="fas fa-file text-info"></i> 
                            {{ ressource.nom }}
                        </h3>
                        <small class="text-muted">
                            Cours: <a href="{{ path('app_cours_show', {'id': ressource.cours.id}) }}">{{ ressource.cours.titre }}</a>
                        </small>
                    </div>
                    <div>
                        <span class="badge bg-info">FICHIER</span>
                        <a href="{{ path('app_cours_show', {'id': ressource.cours.id}) }}" 
                           class="btn btn-outline-secondary btn-sm ms-2">
                            <i class="fas fa-arrow-left"></i> Retour au cours
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if ressource.url %}
                    <div class="text-center mb-4">
                        <div class="file-preview p-5 bg-light rounded">
                            <i class="fas fa-file fa-5x text-muted mb-3"></i>
                            <h4>{{ ressource.nom }}</h4>
                            <p class="text-muted">Fichier disponible au téléchargement</p>
                        </div>
                    </div>
                    {% else %}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        Le fichier n'est pas disponible.
                    </div>
                    {% endif %}

                    {% if ressource.contenu %}
                    <div class="mt-4">
                        <h5>Contenu du fichier</h5>
                        <div class="p-3 bg-light rounded">
                            {{ ressource.contenu|nl2br }}
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> 
                                Ajouté le {{ ressource.dateDeCreation ? ressource.dateDeCreation|date('d/m/Y H:i') : 'N/A' }}
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            {% if ressource.url %}
                            <a href="{{ ressource.url }}" target="_blank" 
                               class="btn btn-info btn-lg">
                                <i class="fas fa-external-link-alt"></i> 
                                Ouvrir le fichier
                            </a>
                            
                            <a href="{{ ressource.url }}" download="{{ ressource.nom }}" 
                               class="btn btn-primary btn-lg ms-2">
                                <i class="fas fa-download"></i> 
                                Télécharger
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
