{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <div class="flex flex-wrap -mx-3 justify-center">
        <div class="w-full max-w-full px-3 lg:w-9/12">
            <div class="relative flex flex-col min-w-0 mt-6 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
                <div class="p-6 pb-0 mb-0 bg-white border-b-0 rounded-t-2xl flex justify-between items-center">
                    <div>
                        <h3 class="font-bold text-transparent bg-gradient-to-tl from-purple-700 to-pink-500 bg-clip-text">Détails de la Mission</h3>
                        <p class="mb-0 text-sm">Aperçu complet des informations de la mission.</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <a href="{{ path('app_mission_edit', {'id': mission.id}) }}" class="inline-block px-6 py-3 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer active:opacity-85 hover:scale-102 hover:shadow-soft-xs leading-pro text-xs ease-soft-in tracking-tight-soft shadow-soft-md bg-gradient-to-tl from-purple-700 to-pink-500">
                            <i class="fas fa-edit mr-1"></i> Modifier
                        </a>
                        {{ include('mission/_delete_form.html.twig') }}
                    </div>
                </div>
                <div class="flex-auto p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                            <h6 class="text-xs font-bold text-slate-400 uppercase mb-3">Informations de Mission</h6>
                            <div class="space-y-3">
                                <div>
                                    <label class="text-xs font-bold text-slate-700 block uppercase">Titre</label>
                                    <span class="text-sm font-semibold">{{ mission.title }}</span>
                                </div>
                                <div>
                                    <label class="text-xs font-bold text-slate-700 block uppercase">Description</label>
                                    <p class="text-sm text-slate-600 leading-relaxed">{{ mission.description|nl2br }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                            <h6 class="text-xs font-bold text-slate-400 uppercase mb-3">Statut et Lien</h6>
                            <div class="space-y-3">
                                <div class="flex justify-between items-center">
                                    <label class="text-xs font-bold text-slate-700 uppercase">État</label>
                                    {% set badge_class = 'bg-gradient-to-tl from-slate-600 to-slate-300' %}
                                    {% set status_label = mission.state %}
                                    {% if mission.state == 'new' %}
                                        {% set badge_class = 'bg-gradient-to-tl from-purple-700 to-pink-500' %}
                                        {% set status_label = 'Nouveau' %}
                                    {% elseif mission.state == 'in_progress' %}
                                        {% set badge_class = 'bg-gradient-to-tl from-blue-600 to-cyan-400' %}
                                        {% set status_label = 'En cours' %}
                                    {% elseif mission.state == 'completed' %}
                                        {% set badge_class = 'bg-gradient-to-tl from-green-600 to-lime-400' %}
                                        {% set status_label = 'Terminé' %}
                                    {% endif %}
                                    <span class="{{ badge_class }} px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">{{ status_label }}</span>
                                </div>
                                <div class="flex justify-between">
                                    <label class="text-xs font-bold text-slate-700 uppercase">Idée Associée</label>
                                    <span class="text-sm font-semibold text-fuchsia-500">{{ mission.implementIdea ? mission.implementIdea.title : 'N/A' }}</span>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100 md:col-span-2">
                            <h6 class="text-xs font-bold text-slate-400 uppercase mb-3">Chronologie</h6>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="text-xs font-bold text-slate-700 block uppercase">Créé le</label>
                                    <span class="text-sm font-semibold text-slate-500"><i class="far fa-calendar-alt mr-1"></i> {{ mission.createdAt ? mission.createdAt|date('d F Y, H:i') : 'N/A' }}</span>
                                </div>
                                <div>
                                    <label class="text-xs font-bold text-slate-700 block uppercase">Dernière modification</label>
                                    <span class="text-sm font-semibold text-slate-500">{{ mission.lastUpdate ? mission.lastUpdate|date('d F Y, H:i') : 'Pas de modification' }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 text-center">
                        <a href="{{ path('app_mission_index') }}" class="text-sm font-bold text-slate-700 hover:text-fuchsia-500 transition-all">
                            <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
