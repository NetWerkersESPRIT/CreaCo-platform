{% extends 'base.html.twig' %}

{% block title %}Liste des Tâches{% endblock %}

{% block body %}
    <div class="flex flex-wrap -mx-3 mt-6">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
                <div class="p-6 pb-0 mb-0 bg-white border-b-0 rounded-t-2xl flex justify-between items-center">
                    <div>
                        <h6 class="font-bold">Table des Tâches</h6>
                        <p class="text-sm mb-0">Liste de toutes les tâches enregistrées</p>
                    </div>
                    <a href="{{ path('app_task_new') }}" class="inline-block px-6 py-3 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer active:opacity-85 hover:scale-102 hover:shadow-soft-xs leading-pro text-xs ease-soft-in tracking-tight-soft shadow-soft-md bg-gradient-to-tl from-purple-700 to-pink-500">
                        <i class="fas fa-plus mr-1"></i> Nouvelle Tâche
                    </a>
                </div>
                <div class="flex-auto px-0 pt-0 pb-2">
                    <div class="p-0 overflow-x-auto">
                        <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                            <thead class="align-bottom">
                                <tr>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">ID</th>
                                    <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Tâche</th>
                                    <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Responsable</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">État</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Date Limite</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for task in tasks %}
                                    <tr>
                                        <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                            <div class="flex px-4 py-1">
                                                <span class="text-xs font-bold">{{ task.id }}</span>
                                            </div>
                                        </td>
                                        <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                            <div class="flex flex-col justify-center">
                                                <h6 class="mb-0 text-sm leading-normal font-semibold">{{ task.title }}</h6>
                                                <p class="mb-0 text-xs leading-tight text-slate-400">{{ task.belongTo ? task.belongTo.title : 'Aucune mission' }}</p>
                                            </div>
                                        </td>
                                        <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                            <div class="flex items-center">
                                                <div class="flex flex-col">
                                                    <h6 class="mb-0 text-xs font-semibold leading-tight">{{ task.assumedBy ? task.assumedBy.username : 'Non assigné' }}</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="p-2 text-sm leading-normal text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                            {% set badge_class = 'bg-gradient-to-tl from-slate-600 to-slate-300' %}
                                            {% set status_label = task.state %}
                                            
                                            {% if task.state == 'todo' %}
                                                {% set badge_class = 'bg-gradient-to-tl from-slate-600 to-slate-300' %}
                                                {% set status_label = 'À faire' %}
                                            {% elseif task.state == 'in_progress' %}
                                                {% set badge_class = 'bg-gradient-to-tl from-blue-600 to-cyan-400' %}
                                                {% set status_label = 'En cours' %}
                                            {% elseif task.state == 'completed' %}
                                                {% set badge_class = 'bg-gradient-to-tl from-green-600 to-lime-400' %}
                                                {% set status_label = 'Terminé' %}
                                            {% endif %}
                                            
                                            <span class="{{ badge_class }} px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">{{ status_label }}</span>
                                        </td>
                                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                            <span class="text-xs font-semibold leading-tight text-slate-400">{{ task.timeTlimit ? task.timeTlimit|date('d/m/Y H:i') : 'Pas de limite' }}</span>
                                        </td>
                                        <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent text-center">
                                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="text-xs font-semibold leading-tight text-slate-400 mr-4">
                                                <i class="fas fa-eye text-info"></i> Voir
                                            </a>
                                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="text-xs font-semibold leading-tight text-slate-400">
                                                <i class="fas fa-edit text-primary"></i> Modifier
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="p-4 text-center text-sm">Aucune tâche trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
