{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire - CreaCo
{% endblock %}
{% block page_title %}Commentaire
{% endblock %}
{% block page_subtitle %}Modifier
{% endblock %}

{% block body %}
	<div class="flex flex-wrap -mx-3 justify-center">
		<div class="w-full max-w-full px-3 shrink-0 md:w-8/12 lg:w-6/12 flex-0">
			<div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
				<div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent text-center">
					<h5 class="font-bold">Modifier votre commentaire</h5>
					<p class="mb-0 text-sm">Ajustez votre réponse à la discussion</p>
				</div>
				<div class="flex-auto p-6">
					{{ include('forum/comment/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

					<div class="mt-4 text-center">
						<form method="post" action="{{ path('app_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');" class="inline-block mt-4">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
							<button class="inline-block px-6 py-3 font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer shadow-soft-md bg-150 bg-x-25 leading-pro text-xs ease-soft-in tracking-tight-soft bg-gradient-to-tl from-red-600 to-rose-400 hover:scale-102 hover:shadow-soft-xs active:opacity-85">Supprimer le commentaire</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
