{% extends 'base.html.twig' %}

{% block title %}Gestion des Contrats{% endblock %}

{% block breadcrumb %}
    <li class="text-sm pl-2 capitalize leading-normal text-slate-700 before:float-left before:pr-2 before:text-gray-600 before:content-['/']" aria-current="page">
        Contrats
    </li>
{% endblock %}

{% block page_title %}Gestion des Contrats{% endblock %}

{% block body %}
<div class="flex flex-wrap -mx-3">
    <div class="flex-none w-full max-w-full px-3">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent flex justify-between items-center">
                <h6>Liste des Contrats</h6>
            </div>
            <div class="flex-auto px-0 pt-0 pb-2">
                <div class="p-0 overflow-x-auto">
                    <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                        <thead class="align-bottom">
                            <tr>
                                <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">N° Contrat / Titre</th>
                                <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Montant</th>
                                <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Signatures</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Statut</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contract in contracts %}
                                <tr>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <div class="flex px-2 py-1">
                                            <div class="flex flex-col justify-center">
                                                <h6 class="mb-0 text-sm leading-normal">{{ contract.contractNumber }}</h6>
                                                <p class="mb-0 text-xs leading-tight text-slate-400">{{ contract.title }}</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <p class="mb-0 text-xs font-semibold leading-tight">{{ contract.amount }} DT</p>
                                    </td>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <div class="flex flex-col">
                                            <span class="text-xxs font-semibold">Créateur: {% if contract.signedByCreator %}<span class="text-green-500">Signé</span>{% else %}<span class="text-slate-400">En attente</span>{% endif %}</span>
                                            <span class="text-xxs font-semibold">Partenaire: {% if contract.signedByCollaborator %}<span class="text-green-500">Signé</span>{% else %}<span class="text-slate-400">En attente</span>{% endif %}</span>
                                        </div>
                                    </td>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent text-center">
                                        {% set status_class = 'from-slate-600 to-slate-300' %}
                                        {% if contract.status == 'SIGNED' %}
                                            {% set status_class = 'from-green-600 to-lime-400' %}
                                        {% elseif contract.status == 'SENT_TO_COLLABORATOR' or contract.status == 'PENDING_SIGNATURES' %}
                                            {% set status_class = 'from-blue-600 to-cyan-400' %}
                                        {% elseif contract.status == 'CANCELLED' %}
                                            {% set status_class = 'from-red-600 to-rose-400' %}
                                        {% endif %}
                                        <span class="bg-gradient-to-tl {{ status_class }} px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">{{ contract.status }}</span>
                                    </td>
                                    <td class="p-2 text-center align-middle bg-transparent border-b shadow-transparent">
                                        <form method="post" action="{{ path('admin_collab_contract_delete', {'id': contract.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer ce contrat ?');" style="display:inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contract.id) }}">
                                            <button class="text-xs font-semibold leading-tight text-red-500 bg-gray-100 px-3 py-1 rounded-lg border-0 cursor-pointer">
                                                <i class="ni ni-fat-delete mr-1"></i> Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="p-4 text-center">Aucun contrat trouvé</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
