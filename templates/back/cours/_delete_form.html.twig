<form method="post" action="{{ path('app_cours_delete', {'id': cours.id}) }}" onsubmit="return confirm('Are you sure you want to delete this course ?');" style="display:inline-block" novalidate>
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cours.id) }}">
	<button class="text-xs font-semibold leading-tight text-red-500 bg-gray-100 px-3 py-1 rounded-lg border-0 cursor-pointer">
		<i class="fas fa-trash mr-1"></i>
		Delete
	</button>
</form>
