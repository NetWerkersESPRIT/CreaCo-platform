{# Supprimer la catégorie #}
<form method="post" action="{{ path('app_categorie_cours_delete', {'id': categorie_cours.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cette catégorie ?');" novalidate style="display:inline-block">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_cours.id) }}">
	<button class="text-xs font-semibold leading-tight text-red-500 bg-gray-100 px-3 py-1 rounded-lg border-0 cursor-pointer">
		<i class="fas fa-trash mr-1"></i>
		Supprimer
	</button>
</form>
