{% extends './base.html.twig' %}

{% block title %}Ressource{% endblock %}

{% block body %}
    <h1>Ressource</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ressource.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ressource.nom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ressource.type }}</td>
            </tr>
            {% if ressource.type == 'TEXTE' %}
            <tr>
                <th>Contenu</th>
                <td>
                    <div style="white-space: pre-wrap; background: #f5f5f5; padding: 10px; border-radius: 5px;">
                        {{ ressource.contenu }}
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <th>Url</th>
                <td>
                    <a href="{{ ressource.url }}" target="_blank">{{ ressource.url }}</a>
                </td>
            </tr>
            {% endif %}
            <tr>
                <th>Date de création</th>
                <td>{{ ressource.dateDeCreation ? ressource.dateDeCreation|date('d/m/Y H:i') : '-' }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ ressource.dateDeModification ? ressource.dateDeModification|date('d/m/Y H:i') : '-' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ressource_index') }}">back to list</a>

    <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">edit</a>

    {{ include('back/ressource/_delete_form.html.twig') }}
{% endblock %}
