{% extends 'base.html.twig' %}

{% block title %}User Progress - {{ user.username }} | Admin{% endblock %}
{% block page_title %}User Progress Details{% endblock %}

{% block body %}
<div class="w-full px-6 py-6 mx-auto">
    
    <!-- Breadcrumbs -->
    <nav class="relative flex flex-wrap items-center justify-between px-0 py-2 mx-6 transition-all shadow-none duration-250 ease-soft-in rounded-2xl lg:flex-nowrap lg:justify-start mb-6">
        <div class="flex items-center justify-between w-full px-4 py-1 mx-auto flex-wrap-inherit">
            <nav>
                <ol class="flex flex-wrap pt-1 mr-12 bg-transparent rounded-lg sm:mr-16">
                    <li class="text-sm leading-normal">
                        <a class="opacity-50 text-slate-700" href="{{ path('app_admin_gamification') }}">Gamification</a>
                    </li>
                    <li class="text-sm pl-2 capitalize leading-normal text-slate-700 before:float-left before:pr-2 before:text-gray-600 before:content-['/']" aria-current="page">{{ user.username }}</li>
                </ol>
                <h6 class="mb-0 font-bold capitalize">{{ user.username }}'s Progress</h6>
            </nav>
        </div>
    </nav>

    <!-- User Info Card -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-4">
                            <div class="flex items-center justify-center w-16 h-16 text-white text-2xl font-bold rounded-xl bg-gradient-to-tl from-purple-700 to-pink-500">
                                {{ user.username|slice(0, 1)|upper }}
                            </div>
                            <div>
                                <h5 class="mb-1 font-bold">{{ user.username }}</h5>
                                <p class="mb-0 text-sm text-slate-500">{{ user.email }}</p>
                                <span class="badge bg-gradient-to-tl from-purple-700 to-pink-500 text-white text-xs px-3 py-1 rounded-lg mt-1">{{ user.role }}</span>
                            </div>
                        </div>
                        <a href="{{ path('app_admin_gamification') }}" class="inline-block px-6 py-3 font-bold text-center uppercase align-middle transition-all bg-transparent border border-solid rounded-lg shadow-none cursor-pointer leading-pro text-xs ease-soft-in tracking-tight-rem border-slate-700 text-slate-700 hover:bg-slate-700 hover:text-white">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Back
                        </a>
                    </div>

                    <!-- Stats Row -->
                    <div class="flex flex-wrap -mx-3 mt-6">
                        <div class="w-full max-w-full px-3 mb-4 sm:w-1/2 lg:w-1/4">
                            <div class="text-center p-4 bg-gradient-to-tl from-purple-700 to-pink-500 rounded-xl text-white">
                                <i class="fas fa-star text-3xl mb-2"></i>
                                <h4 class="mb-0 font-bold">{{ user.points }}</h4>
                                <p class="mb-0 text-xs opacity-80">Total Points</p>
                            </div>
                        </div>
                        <div class="w-full max-w-full px-3 mb-4 sm:w-1/2 lg:w-1/4">
                            <div class="text-center p-4 bg-gradient-to-tl from-green-600 to-green-400 rounded-xl text-white">
                                <i class="fas fa-check-circle text-3xl mb-2"></i>
                                <h4 class="mb-0 font-bold">{{ completed_courses }}</h4>
                                <p class="mb-0 text-xs opacity-80">Completed Courses</p>
                            </div>
                        </div>
                        <div class="w-full max-w-full px-3 mb-4 sm:w-1/2 lg:w-1/4">
                            <div class="text-center p-4 bg-gradient-to-tl from-blue-600 to-blue-400 rounded-xl text-white">
                                <i class="fas fa-spinner text-3xl mb-2"></i>
                                <h4 class="mb-0 font-bold">{{ in_progress_courses }}</h4>
                                <p class="mb-0 text-xs opacity-80">In Progress</p>
                            </div>
                        </div>
                        <div class="w-full max-w-full px-3 mb-4 sm:w-1/2 lg:w-1/4">
                            <div class="text-center p-4 bg-gradient-to-tl from-orange-600 to-orange-400 rounded-xl text-white">
                                <i class="fas fa-book-open text-3xl mb-2"></i>
                                <h4 class="mb-0 font-bold">{{ total_opened_resources }}</h4>
                                <p class="mb-0 text-xs opacity-80">Resources Opened</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Progress Table -->
    <div class="flex flex-wrap -mx-3">
        <div class="w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border">
                <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                    <h6 class="font-bold">Course Progress</h6>
                </div>
                <div class="flex-auto px-0 pt-0 pb-2">
                    <div class="p-0 overflow-x-auto">
                        <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                            <thead class="align-bottom">
                                <tr>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Course</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Progress</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Resources</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Status</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Completed</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for progress in cours_progress %}
                                <tr>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <div class="flex px-2 py-1">
                                            <div class="flex flex-col justify-center">
                                                <h6 class="mb-0 text-sm leading-normal">{{ progress.cours.titre }}</h6>
                                                <p class="mb-0 text-xs leading-tight text-slate-400">{{ progress.cours.categorie ? progress.cours.categorie.nom : '-' }}</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <div class="flex flex-col items-center">
                                            <span class="mb-1 text-xs font-semibold">{{ progress.progressPercentage }}%</span>
                                            <div class="w-full bg-gray-200 rounded-full h-2">
                                                <div class="bg-gradient-to-tl from-purple-700 to-pink-500 h-2 rounded-full" style="width: {{ progress.progressPercentage }}%"></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <span class="text-xs font-semibold">{{ progress.openedRessources }} / {{ progress.totalRessources }}</span>
                                    </td>
                                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        {% if progress.isCompleted %}
                                            <span class="badge bg-gradient-to-tl from-green-600 to-green-400 text-white text-xs px-3 py-1 rounded-lg">Completed</span>
                                        {% elseif progress.progressPercentage > 0 %}
                                            <span class="badge bg-gradient-to-tl from-blue-600 to-blue-400 text-white text-xs px-3 py-1 rounded-lg">In Progress</span>
                                        {% else %}
                                            <span class="badge bg-gray-300 text-slate-700 text-xs px-3 py-1 rounded-lg">Not Started</span>
                                        {% endif %}
                                    </td>
                                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <span class="text-xs text-slate-400">{{ progress.completedAt ? progress.completedAt|date('d/m/Y') : '-' }}</span>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="p-6 text-center">
                                        <p class="text-slate-500">No course progress yet.</p>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}

