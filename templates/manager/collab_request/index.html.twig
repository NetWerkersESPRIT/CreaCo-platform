{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Manage Requests - CreaCo Manager{% endblock %}
{% block breadcrumb %}Manager / Requests{% endblock %}
{% block page_title %}Requests Review Center{% endblock %}

{% block body %}
<div class="flex flex-wrap -mx-3">
    {% include 'collaborator/_nav.html.twig' %}
    
    <div class="flex-none w-full max-w-full px-3">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent flex justify-between items-center">
                <h6 class="font-bold">Collaboration Requests to Review</h6>
                <div class="flex space-x-2">
                    <span class="bg-gray-100 text-slate-500 text-xs font-bold px-3 py-1 rounded-pill">
                        <i class="ni ni-watch-time mr-1"></i>Pending review
                    </span>
                </div>
            </div>
            <div class="flex-auto px-0 pt-0 pb-2">
                <div class="p-0 overflow-x-auto">
                    <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                        <thead class="align-bottom">
                            <tr>
                                <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Project / Partner</th>
                                <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Creator</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Budget</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Status</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Date</th>
                                <th class="px-6 py-3 font-semibold capitalize align-middle bg-transparent border-b border-gray-200 border-solid shadow-none tracking-none whitespace-nowrap text-slate-400 opacity-70"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for request in collab_requests %}
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <div class="flex px-4 py-1">
                                        <div class="flex flex-col justify-center">
                                            <h6 class="mb-0 text-sm leading-normal font-bold">{{ request.title }}</h6>
                                            <p class="mb-0 text-xs leading-tight text-slate-400">{{ request.collaborator.companyName }}</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <div class="flex items-center">
                                        <div class="flex flex-col">
                                            <h6 class="mb-0 text-xs font-bold leading-tight">{{ request.creator.username }}</h6>
                                            <p class="mb-0 text-xxs leading-tight text-slate-400">Content Creator</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="p-2 text-sm leading-normal text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <span class="font-bold text-slate-700">{{ request.budget|number_format(2, '.', ' ') }} DT</span>
                                </td>
                                <td class="p-2 text-sm leading-normal text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    {% if request.status == 'PENDING' %}
                                        <span class="bg-gradient-to-tl from-gray-900 to-slate-800 px-3 text-xxs rounded-pill py-1 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Pending</span>
                                    {% elseif request.status == 'APPROVED' %}
                                        <span class="bg-gradient-to-tl from-green-600 to-lime-400 px-3 text-xxs rounded-pill py-1 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Approved</span>
                                    {% elseif request.status == 'REJECTED' %}
                                        <span class="bg-gradient-to-tl from-red-600 to-rose-400 px-3 text-xxs rounded-pill py-1 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Rejected</span>
                                    {% elseif request.status == 'MODIFICATION_REQUESTED' %}
                                        <span class="bg-gradient-to-tl from-blue-600 to-cyan-400 px-3 text-xxs rounded-pill py-1 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Revision</span>
                                    {% else %}
                                        <span class="bg-gray-100 text-slate-400 px-3 text-xxs rounded-pill py-1 font-bold uppercase">{{ request.status }}</span>
                                    {% endif %}
                                </td>
                                <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <span class="text-xs font-bold leading-tight text-slate-400">{{ request.createdAt|date('d/m/Y') }}</span>
                                </td>
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent text-right pr-6">
                                    <a href="{{ path('app_manager_collab_request_show', {'id': request.id}) }}" class="text-xs font-bold text-fuchsia-500 hover:text-fuchsia-700 transition-all uppercase">
                                        Review <i class="fas fa-arrow-right ml-1"></i>
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6" class="p-6 text-center text-sm text-slate-400 italic">No collaboration requests matching your revision list.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
