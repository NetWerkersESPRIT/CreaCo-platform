<!-- sidenav  -->
<aside class="max-w-62.5 ease-nav-brand z-990 fixed inset-y-0 my-4 ml-4 block w-full -translate-x-full flex-wrap items-center justify-between rounded-2xl border-0 bg-white p-0 antialiased shadow-none transition-transform duration-200 xl:left-0 xl:translate-x-0 xl:bg-transparent">
	<div class="h-19.5">
		<i class="absolute top-0 right-0 hidden p-4 opacity-50 cursor-pointer fas fa-times text-slate-400 xl:hidden" sidenav-close></i>
		<a class="block px-8 py-6 m-0 text-sm whitespace-nowrap text-slate-700" href="{{ path('app_home') }}" target="_blank">
			<img src="{{ asset('assets/img/logocrea.png') }}" class="inline h-full max-w-full transition-all duration-200 ease-nav-brand max-h-8" alt="main_logo"/>
			<span class="ml-1 font-semibold transition-all duration-200 ease-nav-brand">CreaCo</span>
		</a>
	</div>

	<hr
	class="h-px mt-0 bg-transparent bg-gradient-to-r from-transparent via-black/40 to-transparent"/>

	<!-- âŒ NO SCROLL HERE -->
	<div class="items-center block w-auto h-sidenav grow basis-full">
		<ul class="flex flex-col pl-0 mb-0">
			{% set currentRoute = app.request.attributes.get('_route') %}

			<!-- Forum -->
			<li class="mt-0.5 w-full">
				<a class="py-2.7 text-sm ease-nav-brand my-0 mx-4 flex items-center whitespace-nowrap rounded-lg px-4 font-semibold text-slate-700 transition-colors hover:bg-gray-100 {{ (currentRoute starts with 'app_post' or currentRoute starts with 'app_forum' or currentRoute starts with 'forum_') ? 'bg-white shadow-soft-xl' : '' }}" href="{{ path('app_forum') }}">
					<div class="shadow-soft-2xl mr-2 flex h-8 w-8 items-center justify-center rounded-lg bg-center stroke-0 text-center xl:p-2.5 transition-all {{ (currentRoute starts with 'app_post' or currentRoute starts with 'app_forum' or currentRoute starts with 'forum_') ? 'bg-gradient-to-tl from-purple-700 to-pink-500' : 'bg-white shadow-soft-2xl' }}">
						<i class="ni ni-chat-round {{ (currentRoute starts with 'app_post' or currentRoute starts with 'app_forum' or currentRoute starts with 'forum_') ? 'text-white' : 'text-slate-700' }}"></i>
					</div>
					<span class="ml-1 duration-300 opacity-100 pointer-events-none ease-soft">Forum</span>
				</a>
			</li>

			<!-- Ideas, Collaborations, Cours (Authenticated Users) -->
			{% if app.session.get('user_role') %}
				<!-- Ideas -->
				<li class="mt-0.5 w-full">
					<a class="py-2.7 text-sm ease-nav-brand my-0 mx-4 flex items-center whitespace-nowrap rounded-lg px-4 font-semibold text-slate-700 transition-colors hover:bg-gray-100 {{ currentRoute starts with 'app_idea' ? 'bg-white shadow-soft-xl' : '' }}" href="{{ path('app_idea_index') }}">
						<div class="shadow-soft-2xl mr-2 flex h-8 w-8 items-center justify-center rounded-lg bg-center stroke-0 text-center xl:p-2.5 transition-all {{ currentRoute starts with 'app_idea' ? 'bg-gradient-to-tl from-purple-700 to-pink-500' : 'bg-white shadow-soft-2xl' }}">
							<i class="ni ni-bulb-61 {{ currentRoute starts with 'app_idea' ? 'text-white' : 'text-slate-700' }}"></i>
						</div>
						<span class="ml-1 duration-300 opacity-100 pointer-events-none ease-soft">Ideas</span>
					</a>
				</li>

				<!-- Collaborations -->
				<li class="mt-0.5 w-full">
					<a class="py-2.7 text-sm ease-nav-brand my-0 mx-4 flex items-center whitespace-nowrap rounded-lg px-4 font-semibold text-slate-700 transition-colors hover:bg-gray-100 {{ currentRoute starts with 'app_collaborator' ? 'bg-white shadow-soft-xl' : '' }}" href="{{ path('app_collaborator_index') }}">
						<div class="shadow-soft-2xl mr-2 flex h-8 w-8 items-center justify-center rounded-lg bg-center stroke-0 text-center xl:p-2.5 transition-all {{ currentRoute starts with 'app_collaborator' ? 'bg-gradient-to-tl from-purple-700 to-pink-500' : 'bg-white shadow-soft-2xl' }}">
							<i class="ni ni-briefcase-24 {{ currentRoute starts with 'app_collaborator' ? 'text-white' : 'text-slate-700' }}"></i>
						</div>
						<span class="ml-1 duration-300 opacity-100 pointer-events-none ease-soft">Collaborations</span>
					</a>
				</li>

				<!-- Cours -->
				<li class="mt-0.5 w-full">
					<a class="py-2.7 text-sm ease-nav-brand my-0 mx-4 flex items-center whitespace-nowrap rounded-lg px-4 font-semibold text-slate-700 transition-colors hover:bg-gray-100 {{ currentRoute starts with 'app_cours' ? 'bg-white shadow-soft-xl' : '' }}" href="{{ path('app_cours_index') }}">
						<div class="shadow-soft-2xl mr-2 flex h-8 w-8 items-center justify-center rounded-lg bg-center stroke-0 text-center xl:p-2.5 transition-all {{ currentRoute starts with 'app_cours' ? 'bg-gradient-to-tl from-purple-700 to-pink-500' : 'bg-white shadow-soft-2xl' }}">
							<i class="ni ni-hat-3 {{ currentRoute starts with 'app_cours' ? 'text-white' : 'text-slate-700' }}"></i>
						</div>
						<span class="ml-1 duration-300 opacity-100 pointer-events-none ease-soft">Cours</span>
					</a>
				</li>
			{% endif %}

			<!-- Notifications -->
			<li class="mt-0.5 w-full">
				<a class="py-2.7 text-sm ease-nav-brand my-0 mx-4 flex items-center whitespace-nowrap rounded-lg px-4 font-semibold text-slate-700 transition-colors hover:bg-gray-100 {{ currentRoute starts with 'app_notifications' ? 'bg-white shadow-soft-xl' : '' }}" href="{{ path('app_notifications') }}">
					<div class="shadow-soft-2xl mr-2 flex h-8 w-8 items-center justify-center rounded-lg bg-center stroke-0 text-center xl:p-2.5 transition-all {{ currentRoute starts with 'app_notifications' ? 'bg-gradient-to-tl from-purple-700 to-pink-500' : 'bg-white shadow-soft-2xl' }}">
						<i class="ni ni-bell-55 {{ currentRoute starts with 'app_notifications' ? 'text-white' : 'text-slate-700' }}"></i>
					</div>
					<span class="ml-1 duration-300 opacity-100 pointer-events-none ease-soft">Notifications</span>
				</a>
			</li>

			<!-- Moderation & Admin (Role: Admin) -->
			{% if app.session.get('user_role') == 'ROLE_ADMIN' %}
				<li class="w-full mt-4">
					<h6 class="pl-6 ml-2 text-xs font-bold leading-tight uppercase opacity-60">Admin</h6>
				</li>

				<!-- Connected Users (Admin) -->
				<li class="mt-0.5 w-full">
					<a class="py-2.7 text-sm ease-nav-brand my-0 mx-4 flex items-center whitespace-nowrap rounded-lg px-4 font-semibold text-slate-700 transition-colors hover:bg-gray-100 {{ currentRoute == 'app_admin' or currentRoute == 'app_user_edit' ? 'bg-white shadow-soft-xl' : '' }}" href="{{ path('app_admin') }}">
						<div class="shadow-soft-2xl mr-2 flex h-8 w-8 items-center justify-center rounded-lg bg-center stroke-0 text-center xl:p-2.5 transition-all {{ currentRoute == 'app_admin' or currentRoute == 'app_user_edit' ? 'bg-gradient-to-tl from-purple-700 to-pink-500' : 'bg-white shadow-soft-2xl' }}">
							<i class="ni ni-single-02 {{ currentRoute == 'app_admin' or currentRoute == 'app_user_edit' ? 'text-white' : 'text-slate-700' }}"></i>
						</div>
						<span class="ml-1 duration-300 opacity-100 pointer-events-none ease-soft">Connected Users</span>
					</a>
				</li>

				<!-- Moderation -->
				<li class="mt-0.5 w-full">
					<a class="py-2.7 text-sm ease-nav-brand my-0 mx-4 flex items-center whitespace-nowrap rounded-lg px-4 font-semibold text-slate-700 transition-colors hover:bg-gray-100 {{ currentRoute starts with 'admin_post_' ? 'bg-white shadow-soft-xl' : '' }}" href="{{ path('admin_post_pending') }}">
						<div class="shadow-soft-2xl mr-2 flex h-8 w-8 items-center justify-center rounded-lg bg-center stroke-0 text-center xl:p-2.5 transition-all {{ currentRoute starts with 'admin_post_' ? 'bg-gradient-to-tl from-purple-700 to-pink-500' : 'bg-white shadow-soft-2xl' }}">
							<i class="ni ni-check-bold {{ currentRoute starts with 'admin_post_' ? 'text-white' : 'text-slate-700' }}"></i>
						</div>
						<span class="ml-1 duration-300 opacity-100 pointer-events-none ease-soft">Moderation</span>
					</a>
				</li>
			{% endif %}
		</ul>
	</div>
</aside>
<!-- end sidenav -->
