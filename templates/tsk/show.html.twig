{% extends 'base.html.twig' %}

{% block title %}Idea{% endblock %}

{% block body %}
    <div class="flex flex-wrap -mx-3 justify-center">
        <div class="w-full max-w-full px-3 lg:w-9/12">
            <div class="relative flex flex-col min-w-0 mt-6 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
                <div class="p-6 pb-0 mb-0 bg-white border-b-0 rounded-t-2xl flex justify-between items-center">
                    <div>
                        <h3 class="font-bold text-transparent bg-gradient-to-tl from-purple-700 to-pink-500 bg-clip-text">Idea Details</h3>
                        <p class="mb-0 text-sm">Full overview of your proposal.</p>
                    </div>
                    <div class="flex items-center space-x-2">
                        <a href="{{ path('app_idea_edit', {'id': idea.id}) }}" class="inline-block px-6 py-3 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer active:opacity-85 hover:scale-102 hover:shadow-soft-xs leading-pro text-xs ease-soft-in tracking-tight-soft shadow-soft-md bg-gradient-to-tl from-purple-700 to-pink-500">
                            <i class="fas fa-edit mr-1"></i> Edit
                        </a>
                        {{ include('tsk/_delete_form.html.twig') }}
                    </div>
                </div>
                <div class="flex-auto p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100 md:col-span-2">
                            <h6 class="text-xs font-bold text-slate-400 uppercase mb-3">The Idea</h6>
                            <div class="space-y-3">
                                <div>
                                    <label class="text-xs font-bold text-slate-700 block uppercase">Title</label>
                                    <span class="text-sm font-semibold">{{ idea.title }}</span>
                                </div>
                                <div class="pt-2">
                                    <label class="text-xs font-bold text-slate-700 block uppercase">Proposal</label>
                                    <p class="text-sm text-slate-600 leading-relaxed italic border-l-4 border-fuchsia-300 pl-4 py-2 bg-white rounded-r-lg">{{ idea.description|nl2br }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                            <h6 class="text-xs font-bold text-slate-400 uppercase mb-3">Classification</h6>
                            <div class="flex justify-between items-center">
                                <label class="text-xs font-bold text-slate-700 uppercase">Category</label>
                                <span class="bg-gradient-to-tl from-gray-400 to-slate-100 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-slate-700 border border-slate-200">{{ idea.category }}</span>
                            </div>
                        </div>

                        <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                            <h6 class="text-xs font-bold text-slate-400 uppercase mb-3">History</h6>
                            <div class="flex justify-between items-center">
                                <label class="text-xs font-bold text-slate-700 uppercase">Submitted on</label>
                                <span class="text-sm font-semibold text-slate-500"><i class="far fa-calendar-alt mr-1"></i> {{ idea.createdAt ? idea.createdAt|date('d F Y') : 'N/A' }}</span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 text-center border-t border-gray-100 pt-6">
                        <a href="{{ path('app_idea_index') }}" class="text-sm font-bold text-slate-700 hover:text-fuchsia-500 transition-all">
                            <i class="fas fa-arrow-left mr-1"></i> Back to list
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
