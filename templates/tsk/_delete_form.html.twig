<form method="post" action="{{ path('app_idea_delete', {'id': idea.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ idea.id) }}">
    <button class="inline-block px-6 py-3 mt-4 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer active:opacity-85 hover:scale-102 hover:shadow-soft-xs leading-pro text-xs ease-soft-in tracking-tight-soft shadow-soft-md bg-gradient-to-tl from-red-600 to-red-400">
        <i class="fas fa-trash-alt mr-1"></i> Supprimer
    </button>
</form>
