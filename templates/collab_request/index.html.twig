{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Mes Demandes - CreaCo{% endblock %}
{% block breadcrumb %}Demandes{% endblock %}
{% block page_title %}Mes Demandes de Collaboration{% endblock %}

{% block body %}
<div class="flex flex-wrap -mx-3">
    {% include 'collaborator/_nav.html.twig' %}
    <div class="flex-none w-full max-w-full px-3">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent flex justify-between items-center">
                <h6>Flux des Demandes</h6>
                <div class="flex items-center space-x-4">
                    <div class="flex space-x-2">
                        <span class="text-xs bg-gray-100 px-2 py-1 rounded text-slate-500">PENDING: En attente</span>
                        <span class="text-xs bg-green-100 px-2 py-1 rounded text-green-600">APPROVED: Approuvée</span>
                        <span class="text-xs bg-red-100 px-2 py-1 rounded text-red-600">REJECTED: Rejetée</span>
                    </div>
                    <a href="{{ path('app_collab_request_new') }}" class="inline-block px-4 py-2 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer shadow-soft-md bg-x-25 bg-150 leading-pro text-xs ease-soft-in tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 hover:scale-102 hover:shadow-soft-xs active:opacity-85">
                        <i class="fa fa-plus mr-2"></i> Nouvelle Demande
                    </a>
                </div>
            </div>
            <div class="flex-auto px-0 pt-0 pb-2">
                <div class="p-0 overflow-x-auto">
                    <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                        <thead class="align-bottom">
                            <tr>
                                <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Titre & Partenaire</th>
                                <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Budget</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Statut</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Date</th>
                                <th class="px-6 py-3 font-semibold capitalize align-middle bg-transparent border-b border-gray-200 border-solid shadow-none tracking-none whitespace-nowrap text-slate-400 opacity-70"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for request in requests %}
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <div class="flex px-2 py-1">
                                        <div class="flex flex-col justify-center">
                                            <h6 class="mb-0 text-sm leading-normal">{{ request.title }}</h6>
                                            <p class="mb-0 text-xs leading-tight text-slate-400">avec {{ request.collaborator.companyName }}</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <p class="mb-0 text-xs font-semibold leading-tight text-slate-700">{{ request.budget ? request.budget|number_format(3, ',', ' ') ~ ' DT' : 'Non spécifié' }}</p>
                                </td>
                                <td class="p-2 text-sm leading-normal text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    {% if request.status == 'PENDING' %}
                                        <span class="bg-gradient-to-tl from-slate-600 to-slate-300 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">En attente</span>
                                    {% elseif request.status == 'APPROVED' %}
                                        <span class="bg-gradient-to-tl from-green-600 to-lime-400 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Approuvée</span>
                                    {% elseif request.status == 'REJECTED' %}
                                        <span class="bg-gradient-to-tl from-red-600 to-rose-400 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Rejetée</span>
                                    {% elseif request.status == 'MODIFICATION_REQUESTED' %}
                                        <span class="bg-gradient-to-tl from-blue-600 to-cyan-400 px-2.5 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Modif. Demandée</span>
                                    {% else %}
                                        <span class="bg-gray-100 text-slate-500 px-2.5 text-xs rounded-1.8 py-1.4 font-bold uppercase">{{ request.status }}</span>
                                    {% endif %}
                                </td>
                                <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <span class="text-xs font-semibold leading-tight text-slate-400">{{ request.createdAt|date('d/m/Y') }}</span>
                                </td>
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <div class="flex items-center justify-center space-x-3">
                                        <a href="{{ path('app_collab_request_show', {'id': request.id}) }}" class="text-xs font-semibold leading-tight text-slate-400 hover:text-fuchsia-500">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        {% if request.status == 'PENDING' or request.status == 'MODIFICATION_REQUESTED' %}
                                            <a href="{{ path('app_collab_request_edit', {'id': request.id}) }}" class="text-xs font-semibold leading-tight text-slate-400 hover:text-fuchsia-500">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="p-4 text-center">Aucune demande trouvée.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
