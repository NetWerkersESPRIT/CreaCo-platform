{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Request Details - CreaCo{% endblock %}
{% block breadcrumb %}Requests / {{ collab_request.title }}{% endblock %}
{% block page_title %}Request Details{% endblock %}

{% block body %}
<div class="flex flex-wrap -mx-3">
    <!-- Main Content -->
    <div class="w-full max-w-full px-3 lg:w-8/12">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h5 class="mb-0">{{ collab_request.title }}</h5>
                        <p class="text-sm">Created on {{ collab_request.createdAt|date('d/m/Y at H:i') }}</p>
                    </div>
                    <div class="text-right">
                        <span class="px-4 py-2 rounded-lg text-white text-xs font-bold uppercase
                            {% if collab_request.status == 'PENDING' %}bg-gray-400
                            {% elseif collab_request.status == 'APPROVED' %}bg-green-500
                            {% elseif collab_request.status == 'REJECTED' %}bg-red-500
                            {% elseif collab_request.status == 'MODIFICATION_REQUESTED' %}bg-blue-500
                            {% else %}bg-slate-400{% endif %}">
                            {{ collab_request.status }}
                        </span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="p-4 bg-gray-50 rounded-xl">
                        <h6 class="text-xs font-bold uppercase text-slate-400 mb-2">Planned Budget</h6>
                        <p class="text-lg font-bold text-slate-700">{{ collab_request.budget ? collab_request.budget|number_format(3, ',', ' ') ~ ' DT' : 'Not defined' }}</p>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-xl">
                        <h6 class="text-xs font-bold uppercase text-slate-400 mb-2">Period</h6>
                        <p class="text-lg font-bold text-slate-700">{{ collab_request.startDate|date('d/m/y') }} to {{ collab_request.endDate|date('d/m/y') }}</p>
                    </div>
                </div>

                <div class="mb-6">
                    <h6 class="text-xs font-bold uppercase text-slate-400 mb-2">Description</h6>
                    <div class="p-4 border rounded-xl text-sm leading-relaxed text-slate-600">
                        {{ collab_request.description|nl2br }}
                    </div>
                </div>

                <div class="mb-6">
                    <h6 class="text-xs font-bold uppercase text-slate-400 mb-2">Expected Deliverables</h6>
                    <div class="p-4 border rounded-xl text-sm leading-relaxed text-slate-600">
                        {{ collab_request.deliverables|default('No deliverables specified')|nl2br }}
                    </div>
                </div>

                <div class="mb-6 p-4 bg-red-50 border border-red-100 rounded-xl">
                    <h6 class="text-xs font-bold uppercase text-red-600 mb-2">Manager Comments / Reason</h6>
                    <p class="text-sm text-red-800 italic">"{{ collab_request.rejectionReason }}"</p>
                </div>
            </div>
            
            {% if collab_request.status == 'PENDING' or collab_request.status == 'MODIFICATION_REQUESTED' %}
            <div class="p-4 border-t flex justify-end space-x-3">
                <a href="{{ path('app_collab_request_edit', {id: collab_request.id}) }}" class="bg-gradient-to-tl from-purple-700 to-pink-500 px-6 py-2 text-white rounded-lg text-xs font-bold uppercase shadow-soft-md transition-all hover:scale-102">Edit</a>
                
                <form method="post" action="{{ path('app_collab_request_cancel', {id: collab_request.id}) }}" onsubmit="return confirm('Do you really want to cancel this request?');">
                    <button class="bg-gradient-to-tl from-slate-600 to-slate-300 px-6 py-2 text-white rounded-lg text-xs font-bold uppercase shadow-soft-md transition-all hover:scale-102">Cancel request</button>
                </form>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Sidebar Info -->
    <div class="w-full max-w-full px-3 lg:w-4/12">
        <!-- Partner Card -->
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-4">
                <h6 class="mb-4">Associated Partner</h6>
                <div class="flex items-center">
                    <div class="flex items-center justify-center mr-4 text-white bg-gradient-to-tl from-purple-700 to-pink-500 h-12 w-12 rounded-xl">
                        <i class="ni ni-building text-lg"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-sm">{{ collab_request.collaborator.companyName }}</h6>
                        <a href="{{ path('app_collaborator_show', {id: collab_request.collaborator.id}) }}" class="text-xs text-fuchsia-500 font-bold">View profile</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Manager Card -->
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-4">
                <h6 class="mb-4">Assigned Revisor</h6>
                <div class="flex items-center">
                    <div class="flex items-center justify-center mr-4 text-white bg-gradient-to-tl from-slate-600 to-slate-300 h-12 w-12 rounded-xl">
                        <i class="ni ni-single-02 text-lg"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 text-sm">{{ collab_request.revisor ? collab_request.revisor.username : 'Not assigned' }}</h6>
                        <p class="text-xs text-slate-400">Case manager</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Generated Contract IF APPROVED -->
        {% if collab_request.status == 'APPROVED' and collab_request.contract %}
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border border-2 border-green-200">
            <div class="p-4">
                <h6 class="mb-2 text-green-600 flex items-center">
                    <i class="fa fa-file-contract mr-2"></i>
                    Contract Available
                </h6>
                <p class="text-xs text-slate-500 mb-4">The request has been validated and the contract is ready.</p>
                <a href="{{ path('app_contract_show', {id: collab_request.contract.id}) }}" class="inline-block w-full text-center py-2 bg-gradient-to-tl from-green-600 to-lime-400 text-white rounded-lg text-xs font-bold uppercase transition-all hover:scale-105 shadow-soft-md">Consult contract</a>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
